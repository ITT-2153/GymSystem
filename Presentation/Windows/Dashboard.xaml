<Window x:Class="Presentation.Windows.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Presentation.Windows"
        mc:Ignorable="d"
        Title="Dashboard" Height="500" Width="850" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent">
    <Border Margin="10" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                          Direction="270"
                          BlurRadius="10"
                          ShadowDepth="1" />
        </Border.Effect>
        <Grid>
            <Rectangle Fill="White" VerticalAlignment="Top" Height="70"/>
            <Menu Background="#24272a" Foreground="White" IsMainMenu="True" Margin="1,70,0,362">
                <MenuItem Header="Dashboard"/>
                <MenuItem Header="Usuarios">
                    <MenuItem Header="Tabla Usuarios">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ContentSave" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header=" Tabla Tipos Usuarios"/>
                </MenuItem>
            </Menu>
            <Rectangle Fill="#eff3f8"  VerticalAlignment="Top" HorizontalAlignment="Left" Height="362" Width="830" Margin="0,118,0,0"/>
            <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Resources/OmegaBlack.png" Margin="1,6,701,416"/>
            <Ellipse Fill="Gray" HorizontalAlignment="Left" Height="50" Margin="715,10,0,0" VerticalAlignment="Top" Width="50"/>
            <Label x:Name="HomeLbl" Content="Inicio •" Foreground="Black" Margin="10,124,770,333" FontSize="12" FontFamily="roboto"/>
            <Label x:Name="OptionLbl" Content="Dashboard" Foreground="Gray" Margin="51,124,710,333" FontSize="12" FontFamily="roboto"/>
            <Grid x:Name="ContainerGrid" Margin="10,151,10,10" Background="White"/>
        </Grid>
    </Border>
</Window>
